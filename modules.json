{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },

    "persistent-workspaces": {
      "eDP-1": 5
    }
  },

  "clock": {
    "tooltip-format": "<tt><big><big>{calendar}</big></big></tt>",
    "calendar": {
                    "mode"          : "month",
                    "mode-mon-col"  : 3,
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#f3f863'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#844FC9'><b>{}</b></span>",
                              "today":      "<span color='#60A619'><b><u>{}</u></b></span>"
                              }
                    },
    "format": "{0:%H:%M - %A, %d}"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 8
  },

  "bluetooth": {
    "format-connected": "󰂱",
    "format-on": "󰂯",
    "format-off": "󰂲",
    "interval": 30,
    "on-click": "kitty -e ~/.config/dmenu-scripts/bluectl.sh",
    "tooltip-format-connected": "{device_alias}"
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "",
    "format-disconnected": "󰅛",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n[ {bandwidthDownBytes}  {bandwidthUpBytes}]",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "interval": 1,
    "on-click": "kitty -e nmtui"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<big>{icon}</big>{capacity}%",
    "format-charging": "<big>{icon}</big> {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": [
      "󰂎 ",
      "󰁺 ",
      "󰁻 ",
      "󰁼 ",
      "󰁽 ",
      "󰁾 ",
      "󰁿 ",
      "󰂀 ",
      "󰂁 ",
      "󰂂 ",
      "󰁹 "
    ]
  },

  "custom/appmenu": {
    "format": "󰣇",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "~/.config/hypr/Scripts/show-ctl-menu.sh",
    "on-click-right": "~/.config/notscripter/scripts/keybindings.sh",
    "tooltip": false
  },

  "group/wireless": {
    "orientation": "horizontal",
    "modules": ["bluetooth", "network"]
  }
}
