{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "!",
      "active": "",
      "default": ""
    },

    "persistent-workspaces": {
      "eDP-1": 5
    }
  },

  "custom/appmenu": {
    "format": "󰣇",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "rofi -show drun -replace & sleep 0.2; hyprctl dispatch focuswindow '^(Rofi)'",
    "on-click-right": "~/.config/notscripter/scripts/keybindings.sh",
    "tooltip": false
  },

  "custom/exit": {
    "format": "",
    "tooltip-format": "Powermenu",
    "on-click": "wlogout",
    "tooltip": false
  },

  "tray": {
    "icon-size": 24,
    "spacing": 8
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "󰥔 {0:%H:%M}",
    "format-alt": "󰥔 {0:%H:%M}   {0:%d-%m-%Y}"
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": " ",
    "format-disconnected": " ",
    "tooltip-format": "  {ifname} via {gwaddri}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) [ {bandwidthDownBytes}  {bandwidthUpBytes}]",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "interval": 1,
    "on-click": "kitty -e nmtui"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": ["󰂎 ", "󰁺 ", "󰁻 ", "󰁼 ", "󰁽 ", "󰁾 ", "󰁿 ", "󰂀 ", "󰂁 ", "󰂂 ", "󰁹 "],
    "format-icons-charging": [" ", " "]
  },

  "bluetooth": {
    "format": "󰂯",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "kitty -e ~/.config/dmenu-scripts/bluectl.sh",
    "tooltip-format-connected": "{device_alias}"
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "",
      "deactivated": ""
    },
    "on-click-right": "hyprlock"
  }
}
