{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "!",
      "active": "",
      "default": ""
    },

    "persistent-workspaces": {
      "eDP-1": 5
    }
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{0:%H:%M - %A, %d}"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 8
  },

  "bluetooth": {
    "format": "󰂲",
    "format-connected": "󰂯",
    "format-disabled": "",
    "interval": 30,
    "on-click": "kitty -e ~/.config/dmenu-scripts/bluectl.sh",
    "tooltip-format-connected": "{device_alias}"
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "",
    "format-disconnected": "󰅛",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n[ {bandwidthDownBytes}  {bandwidthUpBytes}]",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "interval": 1,
    "on-click": "kitty -e nmtui"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}{capacity}%",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{icon} {time}",
    "format-icons": [
      "󰂎 ",
      "󰁺 ",
      "󰁻 ",
      "󰁼 ",
      "󰁽 ",
      "󰁾 ",
      "󰁿 ",
      "󰂀 ",
      "󰂁 ",
      "󰂂 ",
      "󰁹 "
    ]
  },

  "custom/appmenu": {
    "format": "󰣇",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "~/.config/hypr/Scripts/show-ctl-menu.sh",
    "on-click-right": "~/.config/notscripter/scripts/keybindings.sh",
    "tooltip": false
  },

  "group/wireless": {
    "orientation": "horizontal",
    "modules": ["bluetooth", "network"]
  }
}
